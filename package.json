{
  "name": "medicare-hms-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo workspace scripts for Health Hub frontend and backend",
  "scripts": {
    "install:all": "npm --prefix ./apps/frontend install && npm --prefix ./apps/backend install",
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd ./apps/frontend && npm run dev",
    "dev:backend": "cd ./apps/backend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd ./apps/frontend && npm run build",
    "build:backend": "cd ./apps/backend && npm run build",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd ./apps/frontend && npm run lint",
    "lint:backend": "cd ./apps/backend && npm run lint",
    "test": "npm run test:frontend",
    "test:frontend": "cd ./apps/frontend && npm run test",
    "start:backend": "cd ./apps/backend && npm run start"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
